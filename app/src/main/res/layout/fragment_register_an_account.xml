<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/hgear"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="Đăng kí tài khoản"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.765"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.835"/>
            <LinearLayout
                app:layout_constraintBottom_toTopOf="@id/gl1"
                android:background="@drawable/custom_contact"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:text="@string/nameOfCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="textPersonName"
                        android:maxLength="50"
                        android:id="@+id/edNameOfCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/user"
                        android:layout_width="26dp"
                        android:layout_height="26dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:text="@string/phoneOfCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <EditText
                    android:inputType="phone"
                    android:maxLength="11"
                    android:id="@+id/edPhoneOfCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/phonecall"
                        android:layout_width="26dp"
                        android:layout_height="26dp"/>
                </RelativeLayout>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:text="@string/Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="text"
                        android:maxLength="25"
                        android:id="@+id/edUsernameRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="0dp"
                        android:src="@drawable/user22" />
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:text="@string/Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/edPasswordRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/padlock"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:textSize="16dp"
                    android:text="@string/confirmPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/edConfirmPassWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/confirm"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
            </LinearLayout>
            <Button
                app:layout_constraintBottom_toTopOf="@id/gl3"
                app:layout_constraintTop_toBottomOf="@id/gl2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/custom_sign_up"
                android:id="@+id/btnRegister"
                android:text="@string/register"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="200dp"
                android:layout_height="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
